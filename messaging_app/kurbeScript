#!/bin/bash

# kurbeScript
# Script to set up and verify a local Kubernetes cluster using Minikube

set -e  # stop on error

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube not found. Please install Minikube before running this script."
    exit 1
else
    echo "âœ… Minikube is installed."
fi

echo "ğŸš€ Starting Minikube cluster..."
minikube start

echo "â³ Waiting for Kubernetes cluster to be ready..."
kubectl wait --for=condition=Ready nodes --all --timeout=120s

echo "â„¹ï¸ Verifying cluster info..."
kubectl cluster-info

echo "ğŸ“¦ Listing available pods in all namespaces..."
kubectl get pods --all-namespaces
